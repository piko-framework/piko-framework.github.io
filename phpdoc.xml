<?xml version="1.0" encoding="UTF-8" ?>

<!-- To build the API doc run: phpdoc --template=_phpdoc/templates/markdown -->

<phpdocumentor configVersion="3">
    <paths>
        <output>api</output>
        <cache>_cache</cache>
    </paths>
    <version number="v2.0">
        <api>
            <source dsn=".piko-packages">
              <path>asset-bundle/src</path>
              <path>core/src</path>
              <path>db/src</path>
              <path>i18n/src</path>
              <path>piko/src</path>
              <path>router/src</path>
              <path>user/src</path>
            </source>
            <ignore>
                <path>router/src/router</path>
            </ignore>
        </api>
    </version>
    <!--<setting name="guides.enabled" value="0"></setting>-->
</phpdocumentor>

